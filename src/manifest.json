{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "LLM Interface Plus",
  "version": "0.0.1",
  "description": "Enhance Claude with templates and improved controls",
  "homepage_url": "https://github.com/sotayamashita/llm-interface-plus",
  "manifest_version": 3,
  "minimum_chrome_version": "121",
  "browser_specific_settings": {
    "gecko": {
      "id": "awesome-extension@notlmn.github.io",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://claude.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.tsx"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module",
    "scripts": ["background.ts"]
  },
  "commands": {
    "insert_template_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Inserts the first template"
    }
  }
}
